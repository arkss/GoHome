<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/signup_toolbar" >

        <LinearLayout
            android:id="@+id/signup_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/signup_toolbar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signup_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="Sign Up"
                android:textSize="35sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                />
            <EditText
                android:id="@+id/signup_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="id"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_password"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                />
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="password"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_confirm_password"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                />
            <EditText
                android:id="@+id/signup_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="password"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_email"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />

            <EditText
                android:id="@+id/signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_name"
                android:background="@drawable/shape_edittext"
                android:inputType="textWebEmailAddress"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />
            <EditText
                android:id="@+id/signup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="name"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_address"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address" />
            <EditText
                android:id="@+id/signup_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_detail_address"
                android:background="@drawable/shape_edittext"
                android:layout_marginTop="@dimen/small_margin"
                android:layout_marginBottom="@dimen/small_margin"
                android:padding="@dimen/small_margin"/>
            <EditText
                android:id="@+id/signup_detail_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Detail Address"
                android:singleLine="true"
                android:nextFocusDown="@+id/signup_complete"
                android:background="@drawable/shape_edittext"
                android:layout_marginBottom="@dimen/fab_margin"
                android:padding="@dimen/small_margin" />

            <Button
                android:id="@+id/signup_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="60dp"
                android:background="@drawable/shape_button"
                android:text="Sign Up"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>